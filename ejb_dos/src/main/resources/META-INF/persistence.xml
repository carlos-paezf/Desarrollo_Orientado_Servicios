<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="ejb_dos">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>java:jboss/env/jdbc/intentariopg</jta-data-source>
        <mapping-file>META-INF/postgres-orm.xml</mapping-file>
		<class>com.ustados.ejb_dos.model.City</class>
		<class>com.ustados.ejb_dos.model.Client</class>
		<class>com.ustados.ejb_dos.model.Department</class>
		<class>com.ustados.ejb_dos.model.Invoice</class>
		<class>com.ustados.ejb_dos.model.Product</class>
		<class>com.ustados.ejb_dos.model.Stock</class>
		<class>com.ustados.ejb_dos.model.Supplier</class>
		<class>com.ustados.ejb_dos.model.Warehouse</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
        <properties>
            <property name="hibernate.connection.driver_class" 
                       value="org.postgresql.Driver"/>
            <property name="hibernate.dialect" 
                       value="org.hibernet.dialect.PostgresSQL82Dialect"/>
        </properties>
	</persistence-unit>
</persistence>
